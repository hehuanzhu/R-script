```{r}
library(dplyr)
library(ggplot2)

# 确保数据框中的 CD45_density 列不包含缺失值
ALL_SILU_data <- ALL_SILU_data %>%
  filter(!is.na(CD45_density))

# 计算 CD45_density 的中位数
median_CD45 <- median(ALL_SILU_data$CD45_density, na.rm = TRUE)

# 基于中位数将 CD45_density 分为"high"和"low"两组
ALL_SILU_data <- ALL_SILU_data %>%
  mutate(CD45_group = ifelse(CD45_density >= median_CD45, "high", "low"),
         CD45_group = factor(CD45_group, levels = c("low", "high"))) # 确保分组的因子水平顺序
```



```{r}
library(dplyr)
library(survival)
library(survminer)


# 仅删除HLA_I_Manual, OS_Status, 和OS_Time列中含有空值的行
ALL_SILU_data_clean <- ALL_SILU_data %>%
  filter(!is.na(CD45_group) & !is.na(OS_Status) & !is.na(OS_Time))

# 将生存时间从天数转换为月数
ALL_SILU_data_clean <- ALL_SILU_data_clean %>%
  mutate(OS_Time_Months = OS_Time / 30.44)

# 创建一个新的分组变量，将p单独一组，hp和hw一组，w单独一组
# 并且将该变量转换为因子并指定顺序
ALL_SILU_data_grouped <- ALL_SILU_data_clean %>%
  mutate(Group = factor(case_when(
    CD45_group == "high" ~ "high",
    CD45_group == "low" ~ "low",
  
    TRUE ~ "Other" # 处理可能存在的其他情况
  ), levels = c("high", "low"))) # 指定因子水平的顺序

# 移除Group列为"Other"的行，如果你的数据确实只包含p, hp, hw, w，这步可能是多余的
ALL_SILU_data_grouped <- filter(ALL_SILU_data_grouped, Group != "Other")

# 创建生存对象，使用转换后的月数
surv_object <- Surv(time = ALL_SILU_data_grouped$OS_Time_Months, event = ALL_SILU_data_grouped$OS_Status == "DECEASED")

# 使用新的分组变量进行Kaplan-Meier生存分析
km_fit <- survfit(surv_object ~ Group, data = ALL_SILU_data_grouped)

# 绘制生存曲线，指定图例顺序和颜色
ggsurvplot(km_fit,
           data = ALL_SILU_data_grouped,
           pval = TRUE,
           conf.int = FALSE, # 不显示95%置信区间
           risk.table = TRUE,
           palette = c( "#FC4E07", "#2E9FDF"), # 为每个组指定颜色，确保与因子水平的顺序相匹配
           legend.title = "Group",
           legend.labs = c("high",  "low"), # 自定义图例标签
           xlab = "Time in months", # 修改x轴标签为月数
           ylab = "Survival probability",
           risk.table.fontsize = 3, # 调整风险表字体大小
           risk.table.height = 0.3, # 可以调整风险表的高度，如果需要的话
           # 其他字体大小保持默认
           xlim = c(0, 90), # 限制X轴范围只展示到90个月
 break.x.by = 30#横坐标间隔
           )
```
